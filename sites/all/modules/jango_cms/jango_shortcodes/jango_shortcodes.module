function _jango_shortcodes_simple_menu(&$menu) {
  foreach (element_children($menu) as $i) {
    $menu[$i]['#theme'] = 'menu_link__shortcode_simple_menu';
    if (isset($menu[$i]['#below']) && !empty($menu[$i]['#below'])) {
